<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.cyanogenmod.CMWallpapers">

      <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application android:label="@string/app_name" android:icon="@drawable/cyanogenmod_icon">
        <activity
            android:name="wallpaper"
            android:label="@string/app_name"
            android:icon="@drawable/cyanogenmod_icon"
            android:screenOrientation="nosensor"
            android:finishOnCloseSystemDialogs="true">
            <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="NoWallpaper"
            android:label="@string/no_wallpaper"
            android:icon="@drawable/nowallpaper_icon" >
            <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
